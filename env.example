# Flask Application Configuration
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control

# Flask Secret Key - Generate a strong random key for production
# You can generate one using: python -c "import secrets; print(secrets.token_hex(32))"
FLASK_SECRET_KEY=your-secret-key-here-change-in-production

# Flask Debug Mode - Set to 'true' for development, 'false' or leave empty for production
# WARNING: Never set to 'true' in production as it exposes sensitive information
FLASK_DEBUG=false

# Azure SQL Database Configuration
AZURE_SQL_SERVER=your-sql-server.database.windows.net
AZURE_SQL_DATABASE=your-database-name
AZURE_SQL_USERNAME=your-sql-username
AZURE_SQL_PASSWORD=your-sql-password

# Azure Function App Configuration
# URL of your Azure Function App (e.g., https://your-function-app.azurewebsites.net)
AZURE_FUNCTION_APP_URL=https://your-function-app.azurewebsites.net

# Azure Function App Key - Used to authenticate requests to Azure Functions
FUNCTION_KEY=your-function-key-here

# Azure OpenAI Configuration
# API Key for Azure OpenAI service
AZURE_OPENAI_KEY=your-azure-openai-key

# Azure OpenAI Endpoint URL
AZURE_OPENAI_ENDPOINT=https://your-openai-resource.openai.azure.com

# Azure OpenAI Deployment Name (the name of your deployed model)
AZURE_OPENAI_DEPLOYMENT=your-deployment-name

# Azure DALL-E Configuration (for image generation)
# API Key for Azure DALL-E service
AZURE_DALLE_KEY=your-azure-dalle-key

# Azure DALL-E Endpoint URL
AZURE_DALLE_ENDPOINT=https://your-dalle-resource.openai.azure.com

# Azure DALL-E Deployment Name
AZURE_DALLE_DEPLOYMENT=your-dalle-deployment-name

# OpenAI Simulation Mode (for testing without actual API calls)
# Set to 'true' to simulate OpenAI calls, 'false' for real API calls
SIMULATE_OPENAI=false


